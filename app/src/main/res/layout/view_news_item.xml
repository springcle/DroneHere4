<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/newsClick"
    android:layout_gravity="center"
    android:gravity="center"
    android:foregroundGravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="284dp"
        android:layout_height="103dp"
        android:background="#00000000"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:id="@+id/frameLayout2">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_gravity="bottom"
            android:background="#00000000"
            card_view:cardCornerRadius="5dp"
            card_view:cardElevation="@dimen/cardview_default_elevation"
            card_view:cardUseCompatPadding="true">

            <RelativeLayout
                android:id="@+id/linear"
                android:layout_width="match_parent"
                android:layout_height="86dp"
                android:layout_gravity="bottom"
                android:background="#ffffffff">
                <TextView
                    android:id="@+id/newsProvider"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="82dp"
                    android:layout_marginStart="82dp"
                    android:text="New Text"
                    android:textColor="#4a8dce"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/newsTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/newsProvider"
                    android:layout_alignStart="@+id/newsProvider"
                    android:layout_marginTop="5dp"
                    android:layout_below="@+id/newsProvider"
                    android:text="New Text"
                    android:textColor="#a3a3a4"
                    android:textSize="12dp" />
            </RelativeLayout>


            <!--    <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="6dp"
                    android:layout_below="@id/linear"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="30dp"
                    android:background="#eaeaea"></RelativeLayout>-->
        </android.support.v7.widget.CardView>

    </FrameLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/frameLayout2"
        android:layout_alignLeft="@+id/frameLayout2"
        android:layout_alignStart="@+id/frameLayout2"
        android:layout_marginBottom="35dp"
        android:layout_marginLeft="14dp">

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="64dp"
            android:layout_height="66dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="top"
            android:background="@drawable/news_image" />

        <TextView
            android:id="@+id/newsDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center"
            android:text="New Text"
            android:textColor="#ffffffff"
            android:textSize="12dp" />
    </FrameLayout>
</RelativeLayout>
