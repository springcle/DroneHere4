<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login.JoinEmail"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/imageView15"
            android:layout_width="match_parent"
            android:layout_height="136dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@drawable/back_01" >
            <ImageView
                android:layout_width="89dp"
                android:layout_height="65dp"
                android:background="@drawable/email_login_icon"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="23dp"
        android:layout_gravity="center">
    <EditText
        android:layout_width="299dp"
        android:layout_height="48dp"
        android:id="@+id/email"
        android:inputType="textEmailAddress"
        android:hint="이메일"
        android:background="@drawable/b_04_1"
        android:layout_above="@+id/pass1"
        android:layout_marginBottom="16dp"
        android:layout_gravity="center"
        android:textSize="12dp"
        android:paddingLeft="12dp"
        android:textColorHint="#99007ac2"
        android:textColor="#99007ac2" />
    <EditText
        android:layout_width="299dp"
        android:layout_height="48dp"
        android:id="@+id/pass1"
        android:inputType="textPassword"
        android:hint="비밀번호"
        android:layout_above="@+id/pass2"
        android:background="@drawable/b_04_1"
        android:textSize="12dp"
        android:paddingLeft="12dp"
        android:textColorHint="#99007ac2"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:textColor="#99007ac2"
        android:layout_marginBottom="16dp" />

    <EditText
        android:layout_width="299dp"
        android:layout_height="48dp"
        android:id="@+id/pass2"
        android:inputType="textPassword"
        android:hint="비밀번호확인"
        android:layout_marginBottom="0dp"
        android:background="@drawable/b_04_1"
        android:textColorHint="#99007ac2"
        android:layout_gravity="center"
        android:textColor="#99007ac2"
        android:layout_above="@+id/lolol"
        android:layout_centerHorizontal="true"
        android:textSize="12dp"
        android:paddingLeft="12dp" />

<!--
    <ImageView
        android:layout_width="110dp"
        android:layout_height="84dp"
        android:id="@+id/imageView10"
        android:layout_above="@+id/email"
        android:background="@drawable/i_05"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="32dp" />
        -->
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="right"
        android:layout_marginTop="18dp"
        android:layout_width="299dp"
        android:layout_height="wrap_content">
        <!--
        <Button
            android:layout_width="110dp"
            android:layout_height="11dp"
            android:id="@+id/lolol"
            android:layout_gravity="right"
            android:background="@drawable/b_08" />
            -->
        <ImageButton
            android:layout_width="58dp"
            android:layout_height="40dp"
            android:id="@+id/email_join_btn"
            android:layout_gravity="right"
            android:layout_marginTop="18dp"
            android:src="@drawable/b_09_1"
            android:background="@android:color/transparent"/>
    </LinearLayout>
</LinearLayout>
