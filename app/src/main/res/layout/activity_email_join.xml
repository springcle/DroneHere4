<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_02"
    tools:context=".login.JoinEmail"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <ImageView
        android:layout_width="180dp"
        android:layout_height="110dp"
        android:background="@drawable/i_04"
        android:id="@+id/imageView9"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="42dp"
        android:id="@+id/email"
        android:inputType="textEmailAddress"
        android:hint="이메일"
        android:background="@drawable/b_04"
        android:layout_above="@+id/pass"
        android:layout_alignStart="@+id/pass"
        android:layout_marginBottom="16dp"
        android:textSize="15sp"
        android:paddingLeft="16dp"
        android:textColorHint="#99007ac2"

        android:textColor="#079b34" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="42dp"
        android:id="@+id/pass"
        android:inputType="textPassword"
        android:hint="비밀번호"
        android:layout_above="@+id/pass2"
        android:background="@drawable/b_04"
        android:paddingLeft="16dp"
        android:textColorHint="#99007ac2"
        android:layout_centerHorizontal="true"
        android:textColor="#079b34"
        android:layout_marginBottom="16dp" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="42dp"
        android:id="@+id/pass2"
        android:inputType="textPassword"
        android:hint="비밀번호확인"
        android:layout_marginBottom="33dp"
        android:background="@drawable/b_04"
        android:paddingLeft="16dp"
        android:textColorHint="#99007ac2"
        android:textColor="#079b34"
        android:layout_above="@+id/lolol"
        android:layout_centerHorizontal="true"
        android:textSize="15sp" />

    <Button
        android:layout_width="120dp"
        android:layout_height="42dp"
        android:id="@+id/lolol"
        android:background="@drawable/b_08"
        android:layout_alignTop="@+id/gopick"
        android:layout_alignStart="@+id/pass2" />

    <Button
        android:layout_width="100dp"
        android:layout_height="42dp"
        android:id="@+id/gopick"
        android:background="@drawable/nextclick"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/pass2"
        android:layout_marginBottom="50dp" />

    <ImageView
        android:layout_width="110dp"
        android:layout_height="84dp"
        android:id="@+id/imageView10"
        android:layout_above="@+id/email"
        android:background="@drawable/i_05"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="32dp" />
</RelativeLayout>
