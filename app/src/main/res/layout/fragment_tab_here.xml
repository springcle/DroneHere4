<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"


    ><!--    android:background="@color/whiteGrayFont"-->


    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00FFFFFF">


        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsingToolbarLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            app:contentScrim="@color/colorPrimary"
            app:expandedTitleMarginBottom="11dp"
            app:expandedTitleMarginStart="33dp"

            app:layout_scrollFlags="scroll|exitUntilCollapsed|snap">


            <FrameLayout
                android:id="@+id/map_container1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></FrameLayout>

        </android.support.design.widget.CollapsingToolbarLayout>
        <!--            app:expandedTitleTextAppearance="@style/TextAppearanceSet"-->
    </android.support.design.widget.AppBarLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical"

            >


            <Button
                android:id="@+id/hamberger_btn"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="left|center"
                android:layout_marginLeft="20dp"

                android:background="@drawable/i_ham" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:paddingLeft="20dp">

                    <Button
                        android:id="@+id/myLocation"
                        android:layout_width="24dp"
                        android:layout_height="24dp"


                        android:background="@drawable/my_location_btn" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:paddingRight="20dp">

                    <Button

                        android:id="@+id/search_btn"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/i_sear" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>


    </RelativeLayout><!--                                                   -->
    <LinearLayout
        android:id="@+id/drag_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/tab_news_btn"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="30dp"
                android:layout_weight="1"
                android:text="뉴스" />

            <Button
                android:id="@+id/tab_drone_btn"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="30dp"
                android:layout_weight="1"
                android:text="백과" />
        </LinearLayout>

        <android.support.v4.view.ViewPager
            android:id="@+id/sliding_viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <!--
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recy"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:gravity="center|center_horizontal"
             />
             -->
    </LinearLayout>


</android.support.design.widget.CoordinatorLayout>
