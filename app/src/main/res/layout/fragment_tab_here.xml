<com.sothree.slidinguppanel.SlidingUpPanelLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/tools"
    xmlns:sothree="http://schemas.android.com/apk/res-auto"
    android:id="@+id/slidingUpPanel_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    sothree:umanoDragView="@+id/drag_view"
    sothree:umanoFadeColor="#4e515e"
    sothree:umanoOverlay="true"
    sothree:umanoPanelHeight="0dp"
    sothree:umanoParallaxOffset="0dp"
    sothree:umanoScrollableView="@+id/sliding_viewpager"
    sothree:umanoShadowHeight="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="vertical"

            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:paddingLeft="20dp">

                    <Button
                        android:id="@+id/hamberger_btn"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="left|center"
                        android:layout_marginLeft="20dp"

                        android:background="@drawable/i_ham" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:paddingRight="20dp">

                    <Button

                        android:id="@+id/search_btn"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/i_sear" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="bottom|right"
                android:paddingRight="20dp">

                <Button
                    android:id="@+id/myLocation"
                    android:layout_width="24dp"
                    android:layout_height="24dp"


                    android:background="@drawable/my_location_btn" />

            </LinearLayout>
        </LinearLayout>

        <FrameLayout
            android:id="@+id/map_container1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"></FrameLayout>


    </RelativeLayout>


    <!-- Sliding Pannel -->
    <LinearLayout
        android:id="@+id/drag_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/tab_news_btn"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="30dp"
                android:layout_weight="1"
                android:text="뉴스" />

            <Button
                android:id="@+id/tab_drone_btn"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="30dp"
                android:layout_weight="1"
                android:text="백과" />
        </LinearLayout>

        <android.support.v4.view.ViewPager
            android:id="@+id/sliding_viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="#ffffff"
            android:gravity="center|center_horizontal" />
    </LinearLayout>


</com.sothree.slidinguppanel.SlidingUpPanelLayout>
