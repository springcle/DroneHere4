
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Dronedb.TabDrone"
    android:id="@+id/dt_dd"
    android:background="#eaeaea">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relativeLayout3"
        android:gravity="center_vertical"
        android:paddingTop="16dp"
        android:paddingBottom="16dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:id="@+id/drone_search"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:background="#fcfcfc"
            android:paddingLeft="23dp"

            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:textColorHint="#80000000"
            android:textColor="#078e2a"
            android:textSize="15sp" />

        <Button
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:id="@+id/drone_search_btn"
            android:background="@drawable/i_sear"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="23dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/relativeLayout3">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이런 드론은 어떠세요?"
            android:textStyle="bold"
            android:id="@+id/gone_text"
            android:textColor="#3b89dd"
            android:textSize="15dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="7dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="#eaeaea"
            android:layout_below="@+id/gone_text"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/relativeLayout5"></RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ryview"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/relativeLayout5" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spinner"
            android:layout_alignParentTop="true"
            android:prompt="@string/sort1"
            android:layout_gravity="right|center_vertical|center_horizontal"
            android:layout_above="@+id/ryview"
            android:layout_toRightOf="@+id/gone_text"
            android:layout_toEndOf="@+id/gone_text"
            android:layout_marginBottom="8dp"/>

        <!--
        <ImageView
            android:layout_width="220dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:id="@+id/imageView6"
            android:background="@drawable/logo1"
            android:layout_marginTop="38dp" />
-->
    </RelativeLayout>

</RelativeLayout>
