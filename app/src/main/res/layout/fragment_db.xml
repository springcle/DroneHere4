<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dt_dd"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2f2f2f"
    tools:context=".Dronedb.TabDrone">


    <RelativeLayout
        android:id="@+id/relativeLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingTop="16dp">

        <com.example.ksj_notebook.dronehere.Dronedb.MySpinner
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/ryview"
            android:layout_alignParentTop="true"
            android:layout_gravity="right|center_vertical|center_horizontal"
            android:layout_marginBottom="8dp"
            android:layout_toEndOf="@+id/gone_text"
            android:layout_toRightOf="@+id/gone_text"
            android:prompt="@string/sort1" />

        <EditText
            android:id="@+id/drone_search"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/search_bar"
            android:paddingLeft="23dp"
            android:textColor="#70000000"
            android:textColorHint="#80000000"
            android:textSize="12dp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/relativeLayout3"
        android:layout_centerHorizontal="true">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/ryview"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

</RelativeLayout>
