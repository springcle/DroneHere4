<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">


    <RelativeLayout
        android:layout_width="288dp"
        android:layout_height="450dp"
        android:background="@drawable/back_03"
        android:id="@+id/relativeLayout4">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:id="@+id/drn_name"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="10dp"
            android:hint="드론 제품명"
            android:paddingLeft="16dp"
            android:layout_alignEnd="@+id/imageView17"
            android:layout_marginRight="10dp"
            android:background="#00ffffff" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/down12"
            android:background="@drawable/b_16_1"
            android:layout_below="@+id/imageView17"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="22dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/up12"
            android:background="@drawable/b_17_1"
            android:layout_below="@+id/imageView17"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="22dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:text="추가 정보에 따라
서비스가 맞춤으로 제공됩니다."
            android:id="@+id/textView40"
            android:layout_below="@+id/down12"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="57dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/okk"
            android:background="@drawable/b_18_1"
            android:layout_marginBottom="22dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView17"
            android:background="@drawable/b_15"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>

</RelativeLayout>