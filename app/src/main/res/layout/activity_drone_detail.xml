<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.santamaria.dronehere.Dronedb.DroneDetail">

    <!-- 드론 상세 페이지 부분 (xml)인데, 여길왜 리싸이클러뷰로 만든거지? ㅡㅡ -->


    <include
        android:id="@+id/include"
        layout="@layout/toolbar_toolbar"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"></include>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/dbdetailrecy"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/include" />

    <ImageButton
        android:id="@+id/dtdt"
        android:layout_width="57dp"
        android:layout_height="57dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="16dp"
        android:background="#00000000"
        android:src="@drawable/flo_2"


        android:stateListAnimator="@animator/anim" />
</RelativeLayout>