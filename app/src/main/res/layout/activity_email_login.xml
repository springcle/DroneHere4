<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/email_login_back_01"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    tools:context=".login.LoginEmail">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/imageView15"
            android:layout_width="match_parent"
            android:layout_height="136dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@drawable/back_01" >
        <ImageView
            android:layout_width="89dp"
            android:layout_height="65dp"
            android:background="@drawable/email_login_icon" />
            </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginTop="23dp"
        android:gravity="center|top"
        android:orientation="vertical">
        <EditText
            android:id="@+id/email_edit"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_above="@+id/pass_edit"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="16dp"
            android:background="@drawable/b_04_1"
            android:hint="이메일"
            android:inputType="textEmailAddress"
            android:paddingLeft="12dp"
            android:textColor="#99007ac2"
            android:textColorHint="#99007ac2"
            android:textSize="12dp" />
        <EditText
            android:id="@+id/pass_edit"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_above="@+id/loginn"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="16dp"
            android:background="@drawable/b_04_1"
            android:hint="비밀번호"
            android:inputType="textPassword"
            android:paddingLeft="12dp"
            android:textColor="#99007ac2"
            android:textColorHint="#99007ac2"
            android:textSize="12dp" />

        <ImageButton
            android:id="@+id/loginn"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:src="@drawable/email_login_loginbutton"
            android:background="@android:color/transparent" />

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_marginTop="18dp">
            <Button
                android:id="@+id/button3"
                android:layout_width="145dp"
                android:layout_height="11dp"
                android:background="@drawable/email_login_signup_button" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="29dp"
        android:layout_weight="1"
        android:gravity="center|bottom">
        <TextView
            android:layout_width="119dp"
            android:layout_height="13dp"
            android:background="@drawable/email_login_textview2"
            />
    </LinearLayout>

</LinearLayout>
