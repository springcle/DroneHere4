<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:layout_width="57dp"
        android:layout_height="57dp"
        android:id="@+id/flo_1_1"
        android:background="@drawable/flo_4"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="72dp"
        android:layout_marginRight="16dp" />

    <ImageButton
        android:layout_width="57dp"
        android:layout_height="57dp"
        android:id="@+id/flo_2"
        android:layout_above="@id/flo_1_1"
        android:layout_alignStart="@id/flo_1_1"
        android:layout_marginBottom="22dp"
        android:background="@drawable/flo_3"/>

    <ImageButton
        android:layout_width="57dp"
        android:layout_height="57dp"
        android:id="@+id/flo_3"
        android:layout_above="@id/flo_2"
        android:layout_alignStart="@id/flo_2"
        android:layout_marginBottom="16dp"
        android:background="@drawable/flo_2"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="모임 만들기"
        android:textColor="#ccfcfcfc"
        android:id="@+id/textView34"
        android:layout_alignTop="@id/flo_2"
        android:layout_toStartOf="@id/flo_2"
        android:layout_alignBottom="@id/flo_2"
        android:textSize="14sp"
        android:gravity="center_vertical|right"
        android:layout_marginRight="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="별점, 한줄리뷰 남기기"
        android:id="@+id/textView35"
        android:textColor="#ccfcfcfc"
        android:layout_alignTop="@id/flo_3"
        android:layout_toStartOf="@id/flo_3"
        android:layout_alignBottom="@id/flo_3"
        android:textSize="14sp"
        android:gravity="center_vertical|right"
        android:layout_marginRight="16dp" />
</RelativeLayout>