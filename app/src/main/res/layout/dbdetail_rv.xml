<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff">

    <TextView
        android:layout_width="73dp"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/dt_writer"
        android:textSize="14sp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="12dp"
        android:textColor="#3b89dd" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/dt_rv"
        android:textSize="14sp"
        android:textColor="#cc474747"
        android:layout_marginRight="16dp"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/dt_writer" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/line9"
        android:layout_alignLeft="@+id/dt_writer"
        android:layout_alignStart="@+id/dt_writer"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/dt_rv"
        android:layout_alignEnd="@+id/dt_rv" />

</RelativeLayout>