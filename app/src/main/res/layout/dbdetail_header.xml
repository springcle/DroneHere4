    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="#eaeaea"></RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/dt_manu"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="3dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#e6474747" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/dt_price"
            android:layout_below="@+id/dt_manu"
            android:layout_alignStart="@+id/dt_manu"
            android:layout_marginBottom="12dp"
            android:textColor="#bc474747"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/dt_use"
            android:layout_below="@+id/dt_price"
            android:layout_alignStart="@+id/dt_price"
            android:layout_marginBottom="12dp"
            android:textColor="#b2474747"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|bottom"
            android:layout_alignBottom="@+id/dt_manu"
            android:layout_marginRight="18dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true">

            <ImageView
                android:id="@+id/detail_star1"
                android:layout_width="10dp"
                android:layout_height="10dp" />

            <ImageView
                android:id="@+id/detail_star2"
                android:layout_width="10dp"
                android:layout_height="10dp" />

            <ImageView
                android:id="@+id/detail_star3"
                android:layout_width="10dp"
                android:layout_height="10dp" />

            <ImageView
                android:id="@+id/detail_star4"
                android:layout_width="10dp"
                android:layout_height="10dp" />

            <ImageView
                android:id="@+id/detail_star5"
                android:layout_width="10dp"
                android:layout_height="10dp" />
        </LinearLayout>

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="#eaeaea"></RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="기본스펙"
            android:id="@+id/textView13"
            android:layout_alignParentStart="true"
            android:textSize="14sp"
            android:textColor="#3b89dd"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="18dp" />

        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="비행시간"
            android:id="@+id/textView21"
            android:layout_below="@+id/textView13"
            android:layout_alignParentStart="true"
            android:textSize="13sp"
            android:textColor="#cc474747"
            android:gravity="right"
            android:layout_marginBottom="18dp" />

        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="조종거리"
            android:id="@+id/textView22"
            android:layout_below="@+id/textView21"
            android:gravity="right"
            android:textSize="13sp"
            android:textColor="#cc474747"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="18dp" />

        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="사진"
            android:id="@+id/textView23"
            android:layout_below="@+id/textView22"
            android:gravity="right"
            android:textSize="13sp"
            android:textColor="#cc474747"
            android:layout_toStartOf="@+id/progressBar2"
            android:layout_marginBottom="18dp" />

        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="영상"
            android:id="@+id/textView24"
            android:layout_below="@+id/textView23"
            android:gravity="right"
            android:textSize="13sp"
            android:textColor="#cc474747"
            android:layout_alignStart="@+id/textView23" />

        <ImageView
            android:layout_width="200dp"
            android:layout_height="12dp"
            android:id="@+id/progressBar1"
            android:background="#eaeaea"
            android:layout_alignTop="@+id/textView21"
            android:layout_toEndOf="@+id/textView21"
            android:layout_marginLeft="10dp"
            />


        <ImageView
            android:layout_width="200dp"
            android:layout_height="12dp"
            android:id="@+id/progressBar2"
            android:background="#eaeaea"
            android:layout_alignTop="@+id/textView22"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@+id/textView22" />

        <ImageView
            android:layout_width="200dp"
            android:layout_height="12dp"
            android:id="@+id/progressBar3"
            android:background="#eaeaea"
            android:layout_alignTop="@+id/textView23"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@+id/textView23" />

        <ImageView
            android:layout_width="200dp"
            android:layout_height="12dp"
            android:id="@+id/progressBar4"
            android:background="#eaeaea"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/textView23"
            android:layout_toEndOf="@+id/textView24" />




        <ImageView
            android:layout_width="200dp"
            android:layout_height="12dp"
            android:id="@+id/progressBar11"
            android:src="@drawable/clip"
            android:layout_alignTop="@+id/textView21"
            android:layout_toEndOf="@+id/textView21"
            android:layout_marginLeft="10dp" />

        <ImageView
            android:layout_width="200dp"
            android:layout_height="12dp"
            android:id="@+id/progressBar22"
            android:src="@drawable/clip"
            android:layout_alignTop="@+id/textView22"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@+id/textView22" />

        <ImageView
            android:layout_width="200dp"
            android:layout_height="12dp"
            android:id="@+id/progressBar33"
            android:src="@drawable/clip"
            android:layout_alignTop="@+id/textView23"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@+id/textView23" />

        <ImageView
            android:layout_width="200dp"
            android:layout_height="12dp"
            android:id="@+id/progressBar44"
            android:layout_marginLeft="10dp"
            android:src="@drawable/clip"
            android:layout_below="@+id/textView23"
            android:layout_toEndOf="@+id/textView24"
            android:layout_marginBottom="30dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/dt_flight"
            android:textSize="13sp"
            android:textColor="#cc474747"
            android:layout_marginLeft="10dp"
            android:layout_alignTop="@+id/progressBar1"
            android:layout_toEndOf="@+id/progressBar1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/dt_range"
            android:textSize="13sp"
            android:textColor="#cc474747"
            android:layout_marginLeft="10dp"
            android:layout_alignTop="@+id/progressBar2"
            android:layout_toEndOf="@+id/progressBar2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/dt_pic"
            android:layout_marginLeft="10dp"
            android:textSize="13sp"
            android:textColor="#cc474747"
            android:layout_alignTop="@+id/progressBar3"
            android:layout_toEndOf="@+id/progressBar3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/dt_pk"
            android:layout_marginLeft="10dp"
            android:textSize="13sp"
            android:textColor="#cc474747"
            android:layout_alignTop="@+id/progressBar4"
            android:layout_toEndOf="@+id/progressBar4" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:id="@+id/imbtn"
            android:text="상세스펙 더보기"
            android:textColor="#cc474747"
            android:gravity="center"
            android:background="@drawable/box_1"
            android:layout_below="@+id/viss"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/progressBar44"
            android:layout_alignParentStart="true"
            android:id="@+id/viss"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="26dp"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="상세 스펙"
                android:id="@+id/textView36"
                android:layout_marginLeft="16dp"
                android:layout_marginBottom="18dp"
                android:textSize="14sp"
                android:textColor="#3b89dd" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/spec"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:textColor="#b2474747"
                android:textSize="13sp" />
        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="#eaeaea">

    </RelativeLayout>


</LinearLayout>