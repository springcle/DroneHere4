    <TextView
        android:id="@+id/droneName"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:autoText="false"
        android:background="#2C78C3"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:textColor="#ffffff"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">


            <android.support.v4.view.ViewPager
                android:id="@+id/detail_imageView"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:background="@color/white">
                <!--
                                <android.support.v7.widget.CardView
                                    android:layout_width="match_parent"
                                    android:layout_height="150dp">
                                </android.support.v7.widget.CardView>
                -->
            </android.support.v4.view.ViewPager>


        </LinearLayout>

        <!--별점 부분 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/detail_star1"
                    android:layout_width="18dp"
                    android:layout_height="18dp" />

                <ImageView
                    android:id="@+id/detail_star2"
                    android:layout_width="18dp"
                    android:layout_height="18dp" />

                <ImageView
                    android:id="@+id/detail_star3"
                    android:layout_width="18dp"
                    android:layout_height="18dp" />

                <ImageView
                    android:id="@+id/detail_star4"
                    android:layout_width="18dp"
                    android:layout_height="18dp" />

                <ImageView
                    android:id="@+id/detail_star5"
                    android:layout_width="18dp"
                    android:layout_height="18dp" />
            </LinearLayout>


            <TextView
                android:id="@+id/dt_use"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dt_price"
                android:layout_marginBottom="10dp"
                android:text="New Text"
                android:textColor="#e6474747"
                android:textSize="15dp" />


            <TextView
                android:id="@+id/dt_manu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="New Text"
                android:textColor="#b2474747"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/dt_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/dt_manu"
                android:layout_below="@+id/dt_manu"
                android:layout_marginBottom="10dp"
                android:text="New Text"
                android:textColor="#b2474747"
                android:textSize="13dp" />
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="#eaeaea" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="18dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="18dp"
            android:text="기본 스펙"
            android:textColor="#3b89dd"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/textView21"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView13"
            android:layout_marginBottom="18dp"
            android:gravity="right"
            android:text="비행시간"
            android:textColor="#cc474747"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/textView22"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView21"
            android:layout_marginBottom="18dp"
            android:gravity="right"
            android:text="조종거리"
            android:textColor="#cc474747"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/textView23"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView22"
            android:layout_marginBottom="18dp"
            android:gravity="right"
            android:text="사진"
            android:textColor="#cc474747"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/textView24"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView23"
            android:layout_below="@+id/textView23"
            android:gravity="right"
            android:text="영상"
            android:textColor="#cc474747"
            android:textSize="13dp" />

        <ImageView
            android:id="@+id/progressBar1"
            android:layout_width="200dp"
            android:layout_height="12dp"
            android:layout_alignTop="@+id/textView21"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@+id/textView21"
            android:background="#eaeaea" />


        <ImageView
            android:id="@+id/progressBar2"
            android:layout_width="200dp"
            android:layout_height="12dp"
            android:layout_alignTop="@+id/textView22"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@+id/textView22"
            android:background="#eaeaea" />


        <ImageView
            android:id="@+id/progressBar11"
            android:layout_width="200dp"
            android:layout_height="12dp"
            android:layout_alignTop="@+id/textView21"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@+id/textView21"
            android:src="@drawable/clip" />

        <ImageView
            android:id="@+id/progressBar22"
            android:layout_width="200dp"
            android:layout_height="12dp"
            android:layout_alignTop="@+id/textView22"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@+id/textView22"
            android:src="@drawable/clip" />

        <TextView
            android:id="@+id/dt_flight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/progressBar1"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@+id/progressBar1"
            android:text="New Text"
            android:textColor="#cc474747"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/dt_range"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/progressBar2"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@+id/progressBar2"
            android:text="New Text"
            android:textColor="#cc474747"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/dt_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="New Text"
            android:textColor="#cc474747"
            android:textSize="13dp"
            android:layout_alignBaseline="@+id/textView23"
            android:layout_alignBottom="@+id/textView23"
            android:layout_alignLeft="@+id/dt_pk"
            android:layout_alignStart="@+id/dt_pk"
            />

        <TextView
            android:id="@+id/dt_pk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView24"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@+id/textView24"
            android:text="New Text"
            android:textColor="#cc474747"
            android:textSize="13dp" />
        <Button
            android:id="@+id/imbtn"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:layout_marginTop="26dp"
            android:background="@drawable/box_1"
            android:gravity="center"
            android:text="상세 스펙 더보기"
            android:textColor="#cc474747"
            android:textSize="14dp"
            android:layout_below="@+id/viss"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
           />

        <LinearLayout
            android:id="@+id/viss"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView24"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="25dp"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/textView36"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="18dp"
                android:layout_marginLeft="16dp"
                android:text="상세 스펙"
                android:textColor="#3b89dd"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/spec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:text="New Text"
                android:textColor="#b2474747"
                android:textSize="13dp" />
        </LinearLayout>

    </RelativeLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="#eaeaea" />

</LinearLayout>