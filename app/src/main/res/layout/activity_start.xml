<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/back_01"
    tools:context=".login.StartActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/i_02"/>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"></LinearLayout>

    <Button
        android:layout_width="250dp"
        android:layout_height="42dp"
        android:text="네이버 로그인"
        android:id="@+id/naverbtn"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="17dp" />

    <Button
        android:layout_width="250dp"
        android:layout_height="42dp"
        android:id="@+id/emailbtn"
        android:background="@drawable/b_02"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="17dp" />

    <Button
        android:layout_width="250dp"
        android:layout_height="42dp"
        android:id="@+id/facebookbtn"
        android:background="@drawable/b_01"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="17dp" />

    <Button
        android:layout_width="250dp"
        android:layout_height="42dp"
        android:id="@+id/joinbtn"
        android:background="@drawable/b_03"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="33dp" />
</LinearLayout>
