<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_01"
    android:orientation="vertical"
    tools:context=".login.StartActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
       >
        <!-- android:layout_marginBottom="32dp"-->

        <ImageView
            android:layout_width="112dp"
            android:layout_height="135dp"
            android:src="@drawable/dronehere_logo"
            android:id="@+id/imageView"
            android:layout_marginBottom="32dp"/>
<!--    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="16dp"
        android:gravity="bottom"
        >-->
    <Button
        android:id="@+id/facebookbtn"
        android:layout_width="211dp"
        android:layout_height="39dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="17dp"
        android:background="@drawable/facebook_login" />

    <Button
        android:id="@+id/naverbtn"
        android:layout_width="211dp"
        android:layout_height="39dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="17dp"
        android:background="@drawable/naver_login" />

    <Button
        android:id="@+id/emailbtn"
        android:layout_width="211dp"
        android:layout_height="39dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="17dp"
        android:background="@drawable/email_login" />

    <LinearLayout
        android:layout_width="211dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="left">

            <Button
                android:id="@+id/joinbtn"
                android:layout_width="33dp"
                android:layout_height="10dp"

                android:textColor="#FFFFFFFF"

                android:background="@drawable/signup"

                 />
            <!--
            android:text="회원가입"
            android:background="@android:color/transparent"-->
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="right">

            <Button
                android:id="@+id/member_pass"
                android:layout_width="68dp"
                android:layout_height="10dp"
                android:textColor="#FFFFFFFF"
                android:background="@drawable/member_pass"


                />
<!--
android:text="비회원 둘러보기"
android:background="@android:color/transparent"-->


        </LinearLayout>
    </LinearLayout>

    </LinearLayout>
</LinearLayout>
