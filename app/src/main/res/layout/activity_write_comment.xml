<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eaeaea"
    tools:context=".Gathering.GatheringWriteReview">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="dd"
        android:id="@+id/comment_title"
        android:paddingLeft="16dp"
        android:gravity="center_vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:textSize="21sp"
        android:textColor="#fcfcfc"
        android:background="#1b52ac" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="댓글을 남겨주세요."
        android:id="@+id/textView37"
        android:layout_below="@+id/comment_title"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="11dp"
        android:textSize="14sp"
        android:textIsSelectable="false"
        android:textColor="#078e2a" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="144dp"
        android:id="@+id/comment_edit"
        android:layout_below="@+id/textView37"
        android:layout_alignParentStart="false"
        android:background="#fcfcfc"
        android:layout_alignParentEnd="false"
        android:padding="9dp"
        android:textSize="15sp"
        android:textColor="#078e2a"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:maxLength="47"
        android:gravity="top" />

    <Button
        android:layout_width="78dp"
        android:layout_height="34dp"
        android:id="@+id/comment_button"
        android:background="@drawable/b_1"
        android:layout_below="@+id/comment_edit"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="16dp"
        android:layout_marginTop="22dp" />
</RelativeLayout>
