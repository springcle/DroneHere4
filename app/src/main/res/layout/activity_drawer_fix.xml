<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.ksj_notebook.dronehere.Drawer.Drawer_fix"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:background="#eaeaea">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="닉네임 수정"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="36dp"
        android:textSize="15sp"
        android:textColor="#0260b5" />

    <EditText
        android:layout_width="252dp"
        android:layout_height="33dp"
        android:id="@+id/editText2"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:textColor="#079b34"
        android:background="@drawable/back_input1"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="13dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="내 드론 목록"
        android:id="@+id/textView32"
        android:layout_below="@+id/editText2"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="35dp"
        android:textSize="15sp"
        android:textColor="#0260b5" />

    <ImageView
        android:layout_width="187dp"
        android:layout_height="75dp"
        android:id="@+id/droneimage"
        android:layout_below="@+id/textView32"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView19"
        android:layout_alignTop="@+id/textView32"
        android:layout_alignParentEnd="true" />



    <Button
        android:layout_width="78dp"
        android:layout_height="34dp"
        android:id="@+id/okokok"
        android:elevation="10dp"
        android:background="@drawable/b_1"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="30dp"
        android:layout_marginRight="22dp" />

    <Button
        android:layout_width="75dp"
        android:layout_height="18dp"
        android:id="@+id/adddrone"
        android:elevation="10dp"
        android:background="@drawable/b_add"
        android:layout_alignTop="@+id/imageView19"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="50dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="70dp"
        android:layout_below="@+id/droneimage"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp">

        <android.support.v7.widget.RecyclerView
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:id="@+id/re"

            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>
</RelativeLayout>
